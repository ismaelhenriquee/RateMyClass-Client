{
    "name": "tailwind",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "eslint --ext .ts,.tsx .",
        "typecheck": "tsc --project tsconfig.json --noEmit",
        "test": "jest",
        "test:watch": "pnpm test --watch",
        "test:snapshot": "pnpm test --updateSnapshot",
        "test:ci": "pnpm test --ci --coverage",
        "verification": "pnpm lint && pnpm typecheck && pnpm test:ci",
        "test:e2e": "NEXTAUTH_SECRET=secret NEXTAUTH_URL=http://localhost:3000 playwright test",
        "test:e2e:ci": "NEXTAUTH_SECRET=secret NEXTAUTH_URL=http://localhost:3000 playwright test",
        "test:codegen": "playwright codegen http://localhost:3000"
    },
