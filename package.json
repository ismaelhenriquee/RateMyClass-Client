        "@types/react-dom": "^18",
        "eslint": "^8",
        "eslint-config-next": "14.2.13",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react-hooks": "^4.6.2",
        "jest": "^29.7.0",
